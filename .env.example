# Cyber Trust Sensor Dashboard - Environment Configuration
# This file contains all environment variables needed for the Docker deployment
# Copy this file to .env and adjust values before deployment

###################
# APPLICATION SETTINGS
###################
# Application version for container tagging
APP_VERSION=1.0.0

# Environment (development, staging, production)
NODE_ENV=production

# Application port inside container
APP_PORT=3000

# Base path for application data storage on host
DATA_PATH=/opt/cyber-trust-dashboard

# Log level (debug, info, warn, error)
LOG_LEVEL=info

###################
# DATABASE CONFIGURATION
###################
# PostgreSQL database name
POSTGRES_DB=trustdb

# PostgreSQL username
POSTGRES_USER=trustuser

# PostgreSQL password - CHANGE THIS IN PRODUCTION!
POSTGRES_PASSWORD=changeme_in_production

# PostgreSQL host (service name in docker-compose)
POSTGRES_HOST=postgres

# PostgreSQL port
POSTGRES_PORT=5432

# PostgreSQL data directory inside container
PGDATA=/var/lib/postgresql/data/pgdata

# Connection pool size
PG_POOL_SIZE=10

# Statement timeout in milliseconds (5 minutes)
PG_STATEMENT_TIMEOUT=300000

###################
# REDIS CONFIGURATION
###################
# Redis password - CHANGE THIS IN PRODUCTION!
REDIS_PASSWORD=changeme_in_production

# Redis host (service name in docker-compose)
REDIS_HOST=redis

# Redis port
REDIS_PORT=6379

# Redis database number
REDIS_DB=0

# Redis key prefix for application
REDIS_PREFIX=trust:

###################
# JWT AUTHENTICATION
###################
# JWT secret key - CHANGE THIS IN PRODUCTION!
JWT_SECRET=changeme_in_production

# JWT token expiration time (in seconds, default: 1 hour)
JWT_EXPIRATION=3600

# JWT refresh token expiration time (in seconds, default: 7 days)
JWT_REFRESH_EXPIRATION=604800

# JWT issuer
JWT_ISSUER=cyber-trust-dashboard

###################
# NGINX CONFIGURATION
###################
# Nginx host
NGINX_HOST=localhost

# Nginx HTTP port
NGINX_PORT=80

# Nginx HTTPS port
NGINX_SSL_PORT=443

# Enable SSL (true/false)
NGINX_SSL_ENABLED=false

# SSL certificate path (relative to nginx/ssl directory)
NGINX_SSL_CERT=cert.pem

# SSL key path (relative to nginx/ssl directory)
NGINX_SSL_KEY=key.pem

# Client max body size (for file uploads)
NGINX_CLIENT_MAX_BODY_SIZE=20M

###################
# GRAFANA CONFIGURATION
###################
# Grafana admin username
GRAFANA_ADMIN_USER=admin

# Grafana admin password - CHANGE THIS IN PRODUCTION!
GRAFANA_ADMIN_PASSWORD=changeme_in_production

# Grafana port
GRAFANA_PORT=3000

# Grafana domain
GRAFANA_DOMAIN=grafana.localhost

# Grafana anonymous access (true/false)
GRAFANA_ANONYMOUS_ACCESS=false

# Grafana organization name
GRAFANA_ORG_NAME=Cyber Trust

###################
# BACKUP SETTINGS
###################
# Number of days to retain backups
BACKUP_RETENTION_DAYS=7

# Backup schedule (cron format, default: 2 AM daily)
BACKUP_SCHEDULE="0 2 * * *"

# Backup compression level (1-9)
BACKUP_COMPRESSION_LEVEL=6

# Backup directory on host
BACKUP_DIR=/backups

# Enable automatic backups (true/false)
BACKUP_ENABLED=true

###################
# SECURITY SETTINGS
###################
# Content Security Policy settings
CSP_DEFAULT_SRC="'self'"
CSP_SCRIPT_SRC="'self'"
CSP_STYLE_SRC="'self' 'unsafe-inline'"
CSP_IMG_SRC="'self' data:"
CSP_FONT_SRC="'self' data:"
CSP_CONNECT_SRC="'self' http://api:3000"

# CORS allowed origins (comma-separated)
CORS_ALLOWED_ORIGINS=http://localhost,https://localhost

# Rate limiting (requests per minute)
RATE_LIMIT=100

# Enable security headers (true/false)
SECURITY_HEADERS_ENABLED=true

# TLS minimum version
TLS_MIN_VERSION=TLSv1.2

###################
# MONITORING CONFIGURATION
###################
# Prometheus metrics port
PROMETHEUS_PORT=9090

# Enable metrics collection (true/false)
METRICS_ENABLED=true

# Metrics collection interval (seconds)
METRICS_INTERVAL=15

# Alert manager port
ALERTMANAGER_PORT=9093

# Alert notification email
ALERT_EMAIL=alerts@example.com

# Metrics retention period (days)
METRICS_RETENTION_DAYS=15

###################
# API CONFIGURATION
###################
# API base URL
API_BASE_URL=/api

# API version
API_VERSION=v1

# API request timeout (milliseconds)
API_TIMEOUT=30000

# API rate limit (requests per minute)
API_RATE_LIMIT=60

# Enable API documentation (true/false)
API_DOCS_ENABLED=true

# API documentation path
API_DOCS_PATH=/api-docs

# Enable API caching (true/false)
API_CACHE_ENABLED=true

# API cache TTL (seconds)
API_CACHE_TTL=300

###################
# FEATURE FLAGS
###################
# Enable threat intelligence features (true/false)
FEATURE_THREAT_INTEL=true

# Enable MITRE ATT&CK integration (true/false)
FEATURE_MITRE_ATTACK=true

# Enable incident management features (true/false)
FEATURE_INCIDENT_MANAGEMENT=true

# Enable business plan builder (true/false)
FEATURE_BUSINESS_PLAN=true

# Enable analytics features (true/false)
FEATURE_ANALYTICS=true
